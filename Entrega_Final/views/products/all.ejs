<link rel="stylesheet" href="/styles.css"  type="text/css"/>



<h2>Nuestros productos</h2>
<% for (const product of products) {%>
    <div>
        <h3><%= product.name %></h3>
        <p><%= product.description %></p>
        <p>Precio:
        <span>$<%= product.price %></span>
        <button onclick="window.location.href='/carts/<%= product._id %>'">Agregar al carrito</button>  
<% } %>
<div>
    <button onclick="window.location.href='/carts'">Ver carrito</button>
</div>